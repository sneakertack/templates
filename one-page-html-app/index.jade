    //- Le help.
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.min.js"></script>

    //- These utility styles will come in handy.
    style.
      .full-height {height: 100%;}

      .no-top-spacer {margin-top: 0;}
      .half-top-spacer {margin-top: 10px;}
      .top-spacer {margin-top: 20px;}

      .no-spacer {margin-bottom: 0;}
      .half-spacer {margin-bottom: 10px;}
      .spacer {margin-bottom: 20px;}

      .strong {font-weight: bold;}

      .brand {color: #bad455;}

      textarea {
        resize: vertical;
      }

      input.suppressed {
        display: inline-block;
        width: auto;
      }

      input.suppressed:not(:focus) {
        border: 0;
        padding: 0;
        box-shadow: none;
        border-bottom: dotted 1px #ddd;
        outline: 0;
      }

  //- Markup.
  body.full-height(ng-controller="MainController")
    .container-fluid.full-height(style="padding: 20px;")
      .row.full-height
        .col-xs-6.full-height(style="overflow-y: scroll;")
          form.form-horizontal(role="form")
            h1.title.no-top-spacer Sneakertack's App
            p: span.label.label-default v0.0.1

        .col-xs-6.full-height
